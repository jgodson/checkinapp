doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		meta(name="mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-capable", content="yes")
		title= "User Check Ins " + title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/common.css')
		if title === 'Main'
			link(rel='stylesheet', href='/stylesheets/checkin.css')
		if title === 'Settings'
			link(rel='stylesheet', href='/stylesheets/user-settings.css')
			link(rel='stylesheet', href='/stylesheets/loader.css')
			link(rel='stylesheet', href='/stylesheets/on-off-switch.css')
		link(rel='icon', sizes='128x128', href='/apple-touch-icon.png')
	body
		nav.navbar.navbar-default.navbar-fixed-top
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						.navbar-brand= user.firstName + " " + user.lastName
					#navbar.collapse.navbar-collapse
						ul.nav.navbar-nav
							li(class=(title === 'Main' ? 'active' : ''))
								a(href='/app/checkin') Check Ins
							li(class=(title === 'Settings' ? 'active' : ''))
								a(href='/app/usersettings') Settings
							li
								a(href='/users/logout') Log Out
		block content
		script(src='/javascripts/jquery.min.js')
		script(src='/javascripts/bootstrap.min.js')
		script(src='/javascripts/moment.js')
		script(src='/javascripts/stayInWebApp.min.js')
		if title === 'Main'
			script(async defer src="https://maps.googleapis.com/maps/api/js?key=" + MAPS_API_KEY + "&callback=initMap")
			script(src='/javascripts/checkin-script.js')
		if title === 'Settings'
			script(src='/javascripts/user-settings.js')
		script.
			$(function() {
				$.stayInWebApp();
			});